{
    "name": "timestamp-node",
    "version": "0.0.1",
    "description": "Timestamp Microservice made for freeCodeCamp",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf public",
        "format": "prettier --write src/**/*.{js,ts,json}",
        "watch:ts": "tsc --watch",
        "watch:dev": "micro-dev public/index.js",
        "build": "tsc",
        "serve": "micro public/index.js",
        "start": "npm-run-all --serial build serve",
        "dev": "npm-run-all clean build --parallel watch:*",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.{ts,js,json}": [
            "npm run format",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/azdanov/timestamp-node.git"
    },
    "author": "Anton Zdanov <akumael@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/azdanov/timestamp-node/issues"
    },
    "homepage": "https://github.com/azdanov/timestamp-node#readme",
    "devDependencies": {
        "husky": "^0.14.3",
        "lint-staged": "^6.0.0",
        "micro-dev": "^2.1.1",
        "prettier": "^1.9.2",
        "rimraf": "^2.6.2",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.4.2",
        "tslint-config-prettier": "^1.6.0"
    },
    "dependencies": {
        "@types/micro": "^7.3.1",
        "@types/node": "^8.5.2",
        "micro": "^9.0.2",
        "moment": "^2.20.1",
        "npm-run-all": "^4.1.2",
        "typescript": "^2.6.2"
    }
}
